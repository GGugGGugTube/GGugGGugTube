<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="112dp"
    android:layout_height="260dp"
    android:layout_marginStart="10dp"
    android:background="@color/BG_Item">

    <ImageView
        android:id="@+id/iv_shorts_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/BG_Black"
        android:minHeight="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_shorts_like"
        android:src="@drawable/icon_foot_line"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_shorts_image"
        app:layout_constraintTop_toTopOf="@+id/iv_shorts_image" />

    <TextView
        android:id="@+id/tv_shorts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="5dp"
        android:text="동영상 이름 동영상 이름 동영상 이름 동영상 이름 동영상 이름"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_shorts_image" />

    <TextView
        android:id="@+id/tv_shorts_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:text="날짜 / 시간"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_shorts_name" />

</androidx.constraintlayout.widget.ConstraintLayout>