<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/search_shape"
    android:layout_marginStart="25dp"
    android:layout_marginBottom="25dp">


    <ImageView
        android:id="@+id/iv_searchitem"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_elephant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_searchitemname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="5dp"
        android:text="코끼리"
        android:textColor="@color/String"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_searchitem"
        app:layout_constraintStart_toStartOf="@+id/iv_searchitem"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>